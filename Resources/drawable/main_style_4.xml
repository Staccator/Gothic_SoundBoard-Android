<selector xmlns:android="http://schemas.android.com/apk/res/android" android:height="100dp">

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <gradient android:startColor="#2C1B01" android:centerColor="#1dd1a1" android:endColor="#2C1B01" android:angle="90"  />
      <corners android:radius="10dp"/>
    </shape>
  </item>

  <item android:state_pressed="false">
    <shape android:shape="rectangle">
      <gradient android:startColor="#000000" android:centerColor="#1dd1a1" android:endColor="#000000" android:angle="90"  />
      <corners android:radius="10dp"/>
    </shape>
  </item>

</selector>